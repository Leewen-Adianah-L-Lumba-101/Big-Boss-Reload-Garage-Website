<!--
The use of '.ejs' file

ejs files or embedded javascript files allows for the use of dynamic content by embedding JavaScript within HTML.
-->

<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/navigation.ejs'); %>
        <main class="index-page">
            <!-- main is used to write unique content for the page -->

            <div class="intro">
                <div class="intro-description">
                    <h1>YOUR ONE STOP TO MECHANICAL EXPERTISE</h1>
                    <h3>With over seven years of experience, we understand your car the biggest and bossiest way.</h3>
                </div>
            </div>

            <div class="about">
                <div class="about-photo"></div>

                <div class="about-description">
                    <h2>PINOY TRUSTED CAR MAINTENANCE AND VEHICLE REPAIR</h2>
                    <p>With our earnest services and tenacious work ethic, we strive to bring you and your car the highest, 
                        most genuine quality parts with the sturdiest prices.
                        <br><br>
                        And to those looking for a transparent, pinoy-eccentric communication, 
                        look no further than Big Boss Garage.</p>
                    <a href="/contact" class="button-blue">
                        <div>
                            BOOK NOW
                        </div>
                        <div>
                           <img src = "../assets/chevron-right.svg">
                        </div>
                    </a>
                </div>
            </div>

            <div class="google-maps">
                <h1>FIND OUR GARAGE ON GOOGLE MAPS</h1>
                <p>Open from Mondays to Saturdays 8:30am - 8:00pm. 
                    <br>
                    Closed on Sundays.
                </p>
                <a href="/location" class="button-yellow">VIEW LOCATION AND TIMINGS</a>
            </div>

            <div class="services">
                <h1>SERVICES AVAILABLE</h1>
                <div class="services-grid">
                    <div class="service-item-1">
                        <img src = "../assets/oil-change-icon.svg" width="37.52px" height="56.67px">
                        <br>
                        <p>Auto Oil Changes</p>
                    </div>
                    <div class="service-item-2">
                        <img src = "../assets/car-seat-icon.svg" width="60px" height="56.62px">
                        <br>
                        <p>Auto Seats Cleaning</p>
                    </div>
                    <div class="service-item-3">
                        <img src = "../assets/gear-icon.svg" width="56.67px" height="56.67px">
                        <br>
                        <p>
                            General Repair
                        </p>
                    </div>
                    <div class="service-item-4">
                        <img src = "../assets/front-car-icon.svg" width="60px" height="49.46px">
                        <br>
                        <p>Car Polish</p>
                    </div>
                    <div class="service-item-5">
                        <img src = "../assets/side-car-icon.svg" width="80px" height="36.71px">
                        <br>
                        <p>
                            Car Sheds Services
                        </p>
                    </div>
                    <div class="service-item-6">
                        <img src = "../assets/air-icon.svg" width="70px" height="49.4px">
                        <br>
                        <p>AC Repair</p>
                    </div>
                </div>
                <a href="/services" class="button-red">VIEW ALL SERVICES</a>
            </div>
            
            <div class = "testimonials">
                <section class="testimonials2">
                    <!-- Section heading -->
                    <h1>TESTIMONIALS</h1>
                    
                    <!-- Sorting controls container -->
                    <div class="sort-controls">
                    <!-- Dropdown to select sorting method -->
                    <select id="sortBy">
                        <!-- Sorting options with values that JavaScript will use -->
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="rating-high">Rating: High to Low</option>
                        <option value="rating-low">Rating: Low to High</option>
                    </select>
                    </div>
                    
                    <!-- Container for the horizontal testimonial slider -->
                    <div class="testimonial-slider">
                    <!-- Inner container where testimonial cards will be dynamically inserted -->
                    <div class="testimonial-container" id="submitted-reviews">
                        <!-- JavaScript will add testimonial cards here -->
                        <!-- They will display horizontally and scroll if needed -->
                    </div>
                    </div>
                    
                    <!-- Button to open the review submission form -->
                    <button id="writeReviewButton" type = "button">WRITE A REVIEW</button>
                </section>
                
                <!-- Modal popup form (hidden by default) -->
                <div id="reviewModal" class="modal">
                    <div class="modal-content">
                    <!-- Close button (X) for the modal -->
                    <span class="close-button">&times;</span>
                    <h3>Submit Your Testimonial</h3>
                    <!-- Review submission form -->
                    <form id="testimonialForm">
                        <!-- Textarea for testimonial text -->
                        <textarea name="testimonial" placeholder="Write your testimonial here..." required></textarea>
                        <!-- Input field for user's name -->
                        <input type="text" name="name" placeholder="Your full name" required>
                        <!-- Rating dropdown -->
                        <label for="rating">Rate Us:</label>
                        <select name="rating" id="rating" required>
                        <option value="1">⭐</option>
                        <option value="2">⭐⭐</option>
                        <option value="3">⭐⭐⭐</option>
                        <option value="4">⭐⭐⭐⭐</option>
                        <option value="5">⭐⭐⭐⭐⭐</option>
                        </select>

                        <!-- Submit button -->
                        <button type="submit">SUBMIT</button>
                    </form>
                    </div>
                </div>
            </div>
            
        </main>
        <%- include('../partials/footer.ejs'); %>
        <script></script>
    </body>
</html>